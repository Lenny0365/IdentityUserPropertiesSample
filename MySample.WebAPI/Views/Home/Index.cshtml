@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>johndpalm/IdentityUserPropertiesSample</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div data-bind="visible: loading">Loading...</div>
        <div style="display: none" data-bind="visible: true">
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-ex2-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="navbar-brand" data-bind="if: !loggedIn()">ASP.NET Identity Web API</span>
                    <span data-bind="if: loggedIn"><a href="#" class="navbar-brand" data-bind="click: navigateToHome">ASP.NET Identity Web API</a></span>
                </div>
                <div data-bind="if: loggedIn">
                    <div class="collapse navbar-collapse nav-ex2-collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="#" data-bind="click: navigateToHome">Home</a></li>
                            <li>@Html.ActionLink("API", "Index", "Help", new { area = "HelpPage" }, null)</li>
                        </ul>
                        <div data-bind="with: user">
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <p class="navbar-text">Hello, <a href="#" data-bind="text: name, click: manage"></a>!</p>
                                </li>
                                <li><a href="#" data-bind="click: logOff">Log off</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <div data-bind="foreach: errors">
                <p class="text-error" data-bind="text: $data"></p>
            </div>
            @Html.Partial("_Home")
            @Html.Partial("_Login")
            @Html.Partial("_Register")
            @Html.Partial("_RegisterExternal")
            @Html.Partial("_Manage")
        </div>
        <footer>
            <nav class="navbar navbar-default navbar-fixed-bottom">
                <p class="navbar-text">&copy; @DateTime.Now.Year <a href="https://github.com/johndpalm">John Palmer</a> All rights reserved. <a href="https://github.com/johndpalm/IdentityUserPropertiesSample/blob/master/LICENSE.txt">Licensed under Apache License, Version 2.0</a></p>
            </nav>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
